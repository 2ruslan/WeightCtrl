<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/calendar_item_background"
    >

    <TextView
        android:id="@+id/ic_day"
        android:textColor="@color/colorWhite"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:layout_margin="2dp"
        >
            <TextView
                android:id="@+id/ic_weight"
                android:textColor="@color/colorCalendarWeight"
                android:layout_width="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_gravity="right"
                android:textSize="10dp"/>

            <TextView
                android:id="@+id/ic_hips"
                android:textColor="@color/colorCalendarHips"
                android:layout_width="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_gravity="end"
                android:textSize="10dp"/>
     </LinearLayout>

</LinearLayout>
