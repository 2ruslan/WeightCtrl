<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/mainBackground"
    >

    <LinearLayout
        android:id="@+id/prg_o"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_weight="0"
            android:textColor="@color/colorCalendarWeight"
            android:text="@string/msg_estim"
            android:textSize="20dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_weight="5"
            android:background="@drawable/background_normal_green"
            android:onClick="OnClickEstim"
            android:text="@string/title_estim" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_weight="3"
            android:background="@drawable/background_normal_blue"
            android:onClick="OnClickClose"
            android:text="@string/title_later" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            android:background="@drawable/background_normal_red"
            android:onClick="OnClickNoShowEstim"
            android:text="@string/title_noShowEstim" />


    </LinearLayout>

</RelativeLayout>
